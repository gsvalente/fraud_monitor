# Telegram API Configuration
API_ID=your_api_id_here
API_HASH=your_api_hash_here
PHONE_NUMBER=your_phone_number_here

# Target Groups (comma-separated)
TARGET_GROUPS=Fraud Monitoring,Test Group

# Alert Configuration
ALERT_CHAT_ID=me  # Chat ID to send alerts to (use 'me' for Saved Messages)
ENABLE_DESKTOP_NOTIFICATIONS=true  # Enable desktop notifications when alerts are sent
ENABLE_SOUND_ALERTS=true  # Enable sound alerts when alerts are sent

# Bot Configuration (Optional - for sending alerts to groups via bot)
BOT_TOKEN=your_bot_token_here
BOT_ALERT_CHAT_ID=your_group_chat_id_here

# Fraud Detection Settings
FRAUD_SCORE_THRESHOLD=0.7
HIGH_RISK_THRESHOLD=0.9

# Message Saving Configuration
SAVE_NON_SUSPICIOUS_MESSAGES=true  # Set to false to only save suspicious messages
SAVE_ALL_MEDIA=false  # Set to true to save all media files (uses more storage)
MESSAGE_RETENTION_DAYS=30  # How long to keep messages in database

# Database Configuration
DATABASE_PATH=fraud_monitor_simplified.db
BACKUP_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=fraud_detection.log

# Performance Settings
BATCH_SIZE=100
CACHE_SIZE=1000